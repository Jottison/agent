[32m+[m[32m# render.py[m[41m[m
[32m+[m[41m[m
[32m+[m[32mdef render(expression, result):[m[41m[m
[32m+[m[32m    if isinstance(result, float) and result.is_integer():[m[41m[m
[32m+[m[32m        result_str = str(int(result))[m[41m[m
[32m+[m[32m    else:[m[41m[m
[32m+[m[32m        result_str = str(result)[m[41m[m
[32m+[m[41m[m
[32m+[m[32m    box_width = max(len(expression), len(result_str)) + 4[m[41m[m
[32m+[m[41m[m
[32m+[m[32m    box = [][m[41m[m
[32m+[m[32m    box.append("â”Œ" + "â”€" * box_width + "â”")[m[41m[m
[32m+[m[32m    box.append([m[41m[m
[32m+[m[32m        "â”‚" + " " * 2 + expression + " " * (box_width - len(expression) - 2) + "â”‚"[m[41m[m
[32m+[m[32m    )[m[41m[m
[32m+[m[32m    box.append("â”‚" + " " * box_width + "â”‚")[m[41m[m
[32m+[m[32m    box.append("â”‚" + " " * 2 + "=" + " " * (box_width - 3) + "â”‚")[m[41m[m
[32m+[m[32m    box.append("â”‚" + " " * box_width + "â”‚")[m[41m[m
[32m+[m[32m    box.append([m[41m[m
[32m+[m[32m        "â”‚" + " " * 2 + result_str + " " * (box_width - len(result_str) - 2) + "â”‚"[m[41m[m
[32m+[m[32m    )[m[41m[m
[32m+[m[32m    box.append("â””" + "â”€" * box_width + "â”˜")[m[41m[m
[32m+[m[32m    return "\n".join(box)[m
